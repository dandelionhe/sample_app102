<% provide :title,'All Users' %>
<h1>All Users</h1>
<%= will_paginate %>
<ul class="users list-unstyled">
  <% @users.each do |user| %>
    <li><%= gravatar_for user,size:50 %>
    <%= link_to user.name,user %>
    <% if current_user==user || current_user.admin? %>
    <%= link_to "Edit",edit_user_path(user),class: "btn btn-warning" %>
    <%= link_to "Destroy",user_path(user),method: :delete,data:{confirm:'You sure?'},class: "btn btn-danger" %>
    <% end %>
    </li>
<% end %>
<%= will_paginate %>
</ul>
